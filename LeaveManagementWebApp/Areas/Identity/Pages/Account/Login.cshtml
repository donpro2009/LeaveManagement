@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="card">
    <div class="register-logo">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="card-body register-card-body">
        <div class="row">
            <div class="col-md-4">
                <section>
                    <form id="account" method="post">
                        <hr />
                        <!--Username-->
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" type="text" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Input.Email)">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <!--Passqord-->
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Input.Password)">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <!--Remember me-->
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <!--Submit-->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                        <!--Other actions-->
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>

                    </form>
                    <!--/form-->
                </section>
            </div>

            <!--OAuth-->
            @{
                if ((Model.ExternalLogins?.Count ?? 0) != 0)
                {
                    <div class="col-md-6 col-md-offset-2">
                        <section>
                            <h4>Use another service to log in.</h4>
                            <hr />


                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                            }
                            }
                        </section>
                    </div>

                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
